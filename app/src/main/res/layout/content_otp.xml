<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/activity_otp"
    tools:context="com.example.hari.qpay.Otp"
    android:background="#ff9900">

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/otp"
        android:layout_centerVertical="true"
        android:background="#ffffff"
        android:hint="OTP"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/imageView11"
        android:layout_toEndOf="@+id/imageView11" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textColor="#ffffff"
        android:id="@+id/verify"
        android:background="#374047"
        android:onClick="verify"
        android:layout_below="@+id/otp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="57dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView11"
        android:layout_alignBottom="@+id/otp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/hand" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:id="@+id/imageView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/otp"
        android:background="@mipmap/r" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:id="@+id/imageView13"
        android:background="@mipmap/c"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
