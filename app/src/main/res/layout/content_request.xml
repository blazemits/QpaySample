<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_request" tools:context="com.example.hari.qpay.Request"
    android:background="#ff9900">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/amount"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:background="#ffffff"
        android:hint="Amount To Be Recieved"
        android:gravity="center"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Generate"
        android:textColor="#ffffff"
        android:id="@+id/generate"
        android:layout_below="@+id/amount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:background="#374047"
        android:onClick="generate"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:id="@+id/qrcode"
        android:layout_below="@+id/generate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="53dp" />
</RelativeLayout>
